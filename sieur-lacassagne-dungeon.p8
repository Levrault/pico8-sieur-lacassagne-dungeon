--create a damage zone
--@param f flag
--@param t ticks
--@param w width
--@param h height
function make_hitbox(f,t,w,h)
	local hb={}
	hb.flag=f
	hb.ticks=t
	hb.w=w
	hb.h=h

	hb.draw=function(self,active,x,y)
		if(not active) return
	end
	
	return hb
end
